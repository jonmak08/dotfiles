# Reload shell
alias reloadshell="omz reload"

## Shrug
alias shrug="echo '¯\_(ツ)_/¯' | pbcopy"

## Use "y" instead of "yarn"
alias y="yarn"

alias ll="$(brew --prefix coreutils)/libexec/gnubin/ls -AhlFo --color --group-directories-first"

